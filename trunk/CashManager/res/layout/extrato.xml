<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <include layout="@layout/menu_left" />

    <RelativeLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:background="#000000" >

            <Button
                android:id="@+id/buttonMenu"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Menu" />
        </LinearLayout>

        <ListView
            android:id="@+id/listPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout1"
            android:divider="#FFECECEC"
            android:dividerHeight="2sp" />

        <TextView
            android:id="@+id/itensvazios"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textIsSelectable="false"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/listPrincipal" />

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/ListView01" >

            <Button
                android:id="@+id/ButtonAdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/botao_add" >
            </Button>

            <Button
                android:id="@+id/ButtonExcluir"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/botao_excluir" >
            </Button>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>